<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:weightSum="100">

    <ImageView
        android:id="@+id/user_dp"
        android:layout_width="64dp"
        android:layout_centerVertical="true"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher" />

    <!--width below is kept 0dp as weight is being used to set width automatically-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/threadSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="2"
            android:text="Football"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/threadBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/threadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="Mess name"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/threadUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ce14b016"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/threadTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="5:30"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/threadDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="23-7-16"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/thread_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="23-7-16"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>